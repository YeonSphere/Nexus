{
    "name": "nexus-browser",
    "version": "0.0.3",
    "description": "A modern web browser built with Electron and TypeScript",
    "main": "dist/main/main.js",
    "scripts": {
        "start": "electron .",
        "build": "tsc",
        "watch": "tsc -w",
        "lint": "eslint -c .eslintrc --ext .ts,.tsx ./src",
        "test": "jest",
        "postinstall": "electron-builder install-app-deps"
    },
    "dependencies": {
        "electron": "^32.1.2",
        "react": "^17.0.2",
        "react-dom": "^17.0.2"
    },
    "devDependencies": {
        "@types/electron": "^1.4.38",
        "@types/react": "^17.0.14",
        "@types/react-dom": "^17.0.9",
        "@typescript-eslint/eslint-plugin": "^4.28.2",
        "@typescript-eslint/parser": "^4.28.2",
        "electron-builder": "^25.0.5",
        "eslint": "^7.30.0",
        "typescript": "^4.3.5"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/YeonSphere/Nexus.git"
    },
    "bugs": {
        "url": "https://github.com/YeonSphere/Nexus/issues"
    },
    "homepage": "https://github.com/YeonSphere/Nexus#readme",
    "build": {
        "extends": null,
        "files": [
            "dist/**/*",
            "package.json"
        ],
        "directories": {
            "buildResources": "resources"
        }
    }
}
