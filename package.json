{
    "name": "nexus-browser",
    "version": "0.0.6",
    "description": "A modern web browser built with Electron and TypeScript",
    "main": "dist/main/main.js",
    "scripts": {
        "start": "electron .",
        "build": "tsc && npm run build:renderer",
        "watch": "tsc -w",
        "lint": "eslint -c .eslintrc --ext .ts,.tsx ./src",
        "test": "echo \"No tests specified\" && exit 0",
        "postinstall": "electron-builder install-app-deps",
        "build:renderer": "webpack --config webpack.renderer.config.js"
    },
    "dependencies": {
        "buffer": "^6.0.3",
        "crypto-browserify": "^3.12.0",
        "electron": "^32.1.2",
        "node-fetch": "^2.7.0",
        "os-browserify": "^0.3.0",
        "path-browserify": "^1.0.1",
        "process": "^0.11.10",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "stream-browserify": "^3.0.0",
        "styled-components": "^6.1.13"
    },
    "devDependencies": {
        "@types/electron": "^1.4.38",
        "@types/node-fetch": "^2.6.11",
        "@types/react": "^17.0.2",
        "@types/react-dom": "^17.0.2",
        "@types/styled-components": "^5.1.34",
        "@typescript-eslint/eslint-plugin": "^4.28.2",
        "@typescript-eslint/parser": "^4.28.2",
        "electron-builder": "^25.0.5",
        "eslint": "^7.30.0",
        "ts-loader": "^9.5.1",
        "typescript": "^4.3.5",
        "webpack": "^5.95.0",
        "webpack-cli": "^5.1.4"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/YeonSphere/Nexus.git"
    },
    "bugs": {
        "url": "https://github.com/YeonSphere/Nexus/issues"
    },
    "homepage": "https://github.com/YeonSphere/Nexus#readme",
    "build": {
        "appId": "com.yeonsphere.nexus",
        "productName": "Nexus Browser",
        "files": [
            "dist/**/*",
            "package.json"
        ],
        "directories": {
            "buildResources": "resources"
        },
        "mac": {
            "category": "public.app-category.productivity"
        },
        "win": {
            "target": [
                "nsis",
                "portable"
            ]
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ]
        }
    }
}
